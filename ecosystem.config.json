{
  "apps": [
    {
      "name": "pos",
      "script": "node_modules/.bin/next",
      "args": "start",
      "cwd": "/var/www/pos",
      "env": {
        "NODE_ENV": "production",
        "PORT": 3000
      },
      "instances": 1,
      "exec_mode": "fork",
      "watch": false,
      "ignore_watch": ["node_modules", ".next", "pos.db*"],
      "max_memory_restart": "1G"
    },
    {
      "name": "mazuhi-web",
      "script": "npm",
      "args": "start",
      "cwd": "/var/www/mazuhi-web",
      "env": {
        "NODE_ENV": "production",
        "PORT": 3001
      },
      "instances": 1,
      "exec_mode": "fork",
      "watch": false,
      "ignore_watch": ["node_modules", ".next"],
      "max_memory_restart": "1G"
    }
  ]
}